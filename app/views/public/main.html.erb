<main role="main">

      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron">
        <div class="container">
          <h1 class="display-3 text-primary" >Search For new Properties today...</h1>
        </div>
      </div>

      
    <div class="gall">
      <% @properties.each do |property| %>

        <div class="col-4" >
          <% if property.images.attached? %> 
               <% (0...property.images.count).each do |image| %>
                 <%= link_to(image_tag(property.images[image],class: "img-fluid z-depth-1 img-size",style:"height:400px;width:530px;"), property_path(property)) %>
                 <h3 class='h3'><%= property.name %></h3>
                 <p class='h5'><%= property.address%>
               <% end %>  
          <% end %>
          </div>
        <% end %>
     </div> 

</main>

