<div class="container-fluid p-0" style="height: 100vh; display: flex; justify-content: center; align-items: center; background-image: url('https://images.unsplash.com/photo-1592595896551-12b371d546d5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80'); background-size: cover; background-repeat: no-repeat;">
  <div class="p-4" style="padding-left: 20px; width: 30%;">
    <div class="card" style="background-color:#66AACC;">
      <div class="card-header text-center" style="background-color:#ADD8E6;">
        <h2 class="text-primary" style="color: #CEACE6;">Log in</h2>
      </div>
      <div class="card-body" style="background-color:#ADD8E6">
  <div class="text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, id: "inputEmail", class: "form-control", placeholder: "Email address", autocomplete: "current-email", style: "margin-left: 6px;" %>
      <%= f.password_field :password, autocomplete: "current-password",id: "inputPassword", class: "form-control ", placeholder: "Password", style: "margin-left: 6px;" %>

      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
<button class="btn btn-sm btn-success btn-block" type="submit" style="font-size: 14px; padding: 5px 10px; width: 86px; margin-left: 185px;">Log in</button>
    <% end %>
    <%= render "devise/shared/links"%>
  </div>
</div>
    </div>
  </div>
</div>














