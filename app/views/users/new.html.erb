<h2>Edit User</h2>
<ol>
  <% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ol>


<%= form_for @user do |f| %>
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %><br>

  <%= f.label :email %><br>
  <%= f.text_field :email %><br>

  <%= f.label :mobileno %><br>
  <%= f.number_field :mobileno %><br>

  <%= f.submit %>
<% end %>

