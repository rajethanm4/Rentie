<ol>
  <% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ol>


<%= form_for @user do |f| %>
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %><br><br>

  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %><br><br>

  <%= f.label :email %><br>
  <%= f.text_field :email %><br><br>

  <%= f.label :mobileno %><br>
  <%= f.number_field :mobileno %><br><br>

  <%= f.submit %>
<% end %>